<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.2.xsd"
       profile="sms-feature">

    <!--                                Simple beans start                                                       -->

    <bean id="sms.RequestValidator" class="com.github.xdcrafts.flower.core.spring.example.sms.SmsRequestValidator"/>

    <bean id="sms.Authorizer" class="com.github.xdcrafts.flower.core.spring.example.sms.SmsAuthorizer"/>

    <bean id="sms.Sender" class="com.github.xdcrafts.flower.core.spring.example.sms.SmsSender"/>

    <!--                                  Simple beans end                                                       -->

    <bean id="sms.FlowMiddleware" class="com.github.xdcrafts.flower.spring.impl.MiddlewareDefinition">
        <constructor-arg name="shared" value="false"/>
        <constructor-arg name="namespace" value="sms"/>
        <constructor-arg name="definition">
            <map>
                <entry key="RequestValidator::validate, Authorizer::authorize, Sender::send" value="loggingMiddleware"/>
            </map>
        </constructor-arg>
    </bean>

    <!--                                  Flows start                                                            -->

    <bean id="sms.Flow" class="com.github.xdcrafts.flower.spring.impl.flows.SyncFlowFactory">
        <constructor-arg name="actions">
            <list>
                <value>sms.RequestValidator::validate</value>
                <value>sms.Authorizer::authorize</value>
                <value>sms.Sender::send</value>
            </list>
        </constructor-arg>
        <property name="middleware" ref="sms.FlowMiddleware"/>
    </bean>

    <!--                                  Flows end                                                              -->

    <!--                                  Extensions start                                                       -->

    <bean id="sms.Extension" class="com.github.xdcrafts.flower.spring.impl.DefaultExtensionFactory">
        <constructor-arg name="action" ref="sms.Flow"/>
        <constructor-arg name="configuration">
            <map>
                <entry key="keyword-value" value="sms"/>
                <entry key="selector" value="selector"/>
            </map>
        </constructor-arg>
    </bean>

    <!--                                  Extensions end                                                         -->

</beans>

