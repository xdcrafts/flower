<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.2.xsd"
       profile="sms-feature">

    <!--                                Simple beans start                                                       -->

    <bean id="sms.RequestValidator" class="org.xdcrafts.flower.core.spring.example.sms.SmsRequestValidator"/>

    <bean id="sms.Authorizer" class="org.xdcrafts.flower.core.spring.example.sms.SmsAuthorizer"/>

    <bean id="sms.Sender" class="org.xdcrafts.flower.core.spring.example.sms.SmsSender"/>

    <!--                                  Simple beans end                                                       -->

    <!--                                  Actions start                                                          -->

    <bean class="org.xdcrafts.flower.spring.impl.DefaultActionDefinitionFactory">
        <constructor-arg name="namespace" value="sms"/>
        <constructor-arg name="actions">
            <map>
                <entry key="Validate" value="sms.RequestValidator::validate"/>
                <entry key="Authorize" value="sms.Authorizer::authorize"/>
                <entry key="Send" value="sms.Sender::send"/>
            </map>
        </constructor-arg>
    </bean>

    <!--                                  Actions end                                                            -->

    <!--                                  Flows start                                                            -->

    <bean id="sms.Flow" class="org.xdcrafts.flower.spring.impl.flows.BasicSyncFlowFactory">
        <constructor-arg name="actions">
            <list>
                <ref bean="sms.Validate"/>
                <ref bean="sms.Authorize"/>
                <ref bean="sms.Send"/>
            </list>
        </constructor-arg>
    </bean>

    <!--                                  Flows end                                                              -->

    <!--                                  Extensions start                                                       -->

    <bean id="sms.Extension" class="org.xdcrafts.flower.spring.impl.DefaultExtensionFactory">
        <constructor-arg name="action" ref="sms.Flow"/>
        <constructor-arg name="configuration">
            <map>
                <entry key="keyword-value" value="sms"/>
                <entry key="switch" value="switcher"/>
            </map>
        </constructor-arg>
    </bean>

    <!--                                  Extensions end                                                         -->

</beans>

